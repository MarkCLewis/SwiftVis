package edu.swri.swiftvis.plot.p3d;

import java.awt.Color;

/**
 * This class specifies the attributes that are used for drawing a geometry object.
 * @author Mark Lewis
 */
public class DrawAttributes {
    public DrawAttributes(Color c,double ref,double opac) {
        color=c;
        reflectivity=ref;
        opacity=opac;
    }

    public Color getColor() {
        return color;
    }

    public double getReflectivity() {
        return reflectivity;
    }

    public double getOpacity() {
        return opacity;
    }

    private Color color;
    private double reflectivity;
    private double opacity;
}
